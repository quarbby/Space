<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="penguin.turtle.space"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/spacelauncher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="penguin.turtle.space.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="penguin.turtle.space.Game"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="penguin.turtle.space.Levels"
            android:label="@string/title_activity_levels"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="penguin.turtle.space.GameP1P2"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="penguin.turtle.space.Game4P"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="penguin.turtle.space.NumPlayers"
            android:label="@string/title_activity_num_players" >
        </activity>
        <activity
            android:name="penguin.turtle.space.GameMultP"
            android:label="@string/title_activity_game_mult_p" >
        </activity>
    </application>

</manifest>